{
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun"]
  }
}
